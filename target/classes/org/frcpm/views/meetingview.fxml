<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="500" prefHeight="350" xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.frcpm.presenters.MeetingPresenter">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <top>
        <VBox spacing="10">
            <Label text="Meeting Details" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        </VBox>
    </top>
    
    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="0" bottom="10" left="0"/>
            </padding>
            
            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            
            <!-- Meeting Date -->
            <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                       prefWidth="Infinity"/>
            
            <!-- Start Time -->
            <Label text="Start Time:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="startTimeField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                      promptText="HH:MM"/>
            
            <!-- End Time -->
            <Label text="End Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="endTimeField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                      promptText="HH:MM"/>
            
            <!-- Notes -->
            <Label text="Notes:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                  GridPane.valignment="TOP">
                <padding>
                    <Insets top="5" right="0" bottom="0" left="0"/>
                </padding>
            </Label>
            <TextArea fx:id="notesArea" GridPane.rowIndex="3" GridPane.columnIndex="1" 
                     prefHeight="150" wrapText="true"/>
        </GridPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="saveButton" text="Save" defaultButton="true"/>
            <Button fx:id="cancelButton" text="Cancel" cancelButton="true"/>
        </HBox>
    </bottom>
    
</BorderPane>