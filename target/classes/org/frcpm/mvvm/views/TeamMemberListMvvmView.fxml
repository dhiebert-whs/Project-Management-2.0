<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
   <?import javafx.scene.control.Button?>
   <?import javafx.scene.control.Label?>
   <?import javafx.scene.control.ProgressIndicator?>
   <?import javafx.scene.control.TableColumn?>
   <?import javafx.scene.control.TableView?>
   <?import javafx.scene.layout.BorderPane?>
   <?import javafx.scene.layout.HBox?>
   <?import javafx.scene.layout.VBox?>
   
   <!-- src/main/resources/org/frcpm/mvvm/views/TeamMemberListMvvmView.fxml -->
   <!-- FIXED: Ensured fx:controller is properly specified for MVVMFx -->
   <BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.frcpm.mvvm.views.TeamMemberListMvvmView">
      <top>
         <VBox spacing="10.0">
            <children>
               <Label fx:id="projectLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Project: " />
            </children>
            <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </VBox>
      </top>
      <center>
         <VBox spacing="10.0">
            <children>
               <!-- Team Member Table -->
               <TableView fx:id="teamMemberTableView" prefHeight="400.0" VBox.vgrow="ALWAYS">
                 <columns>
                   <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                   <TableColumn fx:id="usernameColumn" prefWidth="120.0" text="Username" />
                     <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                     <TableColumn fx:id="subteamColumn" prefWidth="120.0" text="Subteam" />
                 </columns>
               </TableView>
               
               <!-- Button Bar -->
               <HBox spacing="10.0">
                  <children>
                     <Button fx:id="newButton" mnemonicParsing="false" text="New" />
                     <Button fx:id="editButton" mnemonicParsing="false" text="Edit" />
                     <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteTeamMemberAction" text="Delete" />
                     <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#onRefreshAction" text="Refresh" />
                  </children>
               </HBox>
               
               <!-- Status Bar -->
               <HBox spacing="10.0">
                  <children>
                     <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" />
                     <ProgressIndicator fx:id="loadingIndicator" maxHeight="20.0" maxWidth="20.0" visible="false" />
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </VBox>
      </center>
   </BorderPane>