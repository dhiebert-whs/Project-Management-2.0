<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
   <?import javafx.scene.control.Button?>
   <?import javafx.scene.control.Label?>
   <?import javafx.scene.control.ListView?>
   <?import javafx.scene.control.ProgressIndicator?>
   <?import javafx.scene.layout.BorderPane?>
   <?import javafx.scene.layout.HBox?>
   <?import javafx.scene.layout.VBox?>
   
   <!-- src/main/resources/org/frcpm/mvvm/views/ProjectListMvvmView.fxml -->
   <BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.frcpm.mvvm.views.ProjectListMvvmView">
      <center>
         <VBox spacing="10.0">
            <children>
               <!-- Project List -->
               <ListView fx:id="projectListView" prefHeight="400.0" VBox.vgrow="ALWAYS" />
               
               <!-- Button Bar -->
               <HBox spacing="10.0">
                  <children>
                     <Button fx:id="newProjectButton" mnemonicParsing="false" onAction="#onNewProjectAction" text="New Project" />
                     <Button fx:id="openProjectButton" mnemonicParsing="false" onAction="#onOpenProjectAction" text="Open Project" />
                     <Button fx:id="importProjectButton" mnemonicParsing="false" onAction="#onImportProjectAction" text="Import Project" />
                     <Button fx:id="deleteProjectButton" mnemonicParsing="false" onAction="#onDeleteProjectAction" text="Delete Project" />
                  </children>
               </HBox>
               
               <!-- Status Bar -->
               <HBox spacing="10.0">
                  <children>
                     <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" />
                     <ProgressIndicator fx:id="loadingIndicator" maxHeight="20.0" maxWidth="20.0" visible="false" />
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </VBox>
      </center>
   </BorderPane>